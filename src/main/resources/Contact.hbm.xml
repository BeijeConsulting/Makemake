<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "it.beije.makemake.addressBook.Contact" table = "rubrica">

        <meta attribute = "class-description">
            This class contains the rubrica detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "surname" column = "cognome" type = "string"/>
        <property name = "name" column = "nome" type = "string"/>
        <property name = "phone" column = "telefono" type = "string"/>
        <property name = "mail" column = "email" type = "string"/>

    </class>
</hibernate-mapping>